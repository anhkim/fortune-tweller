
<div id="title"> <h3>Profile</h3> </div>
<div class="profile container">
  <h2><%= @user.handle %></h2>
  <h3><%= @user.name %></h3>

<% if not_my_page? && !following? %>
  <form action='/follow/<%= @user.handle %>' method='post'>
    <button type="submit">Follow</button>
    </form><br>
<% elsif not_my_page? && following? %>
  <form action='/unfollow/<%= @user.handle %>' method='post'>
    <button type="submit">Unfollow</button>
    </form><br>
<% end %>

  <a href="/profile/<%= @user.handle %>/followers">Followers</a><br>

  <a href="/profile/<%= @user.handle %>/following">Following</a><br>

<h3>Send a tweet!</h3>
  <form action='/tweet' method='post'>
    <input type='text' name='message'>
    <input type='submit' value='Tweet'>
  </form>

</div>
<div class="tweet_container">
  <table>
      <% fortune = ["you'll never make it!", "you are very silly", "#FML", "you should drink to forget", "quit DBC today!"] %>
      <% @tweets.each do |tweet| %>
        <p id="tweet"><%= tweet.message %> <font color=red><%= fortune.shuffle.pop %></font><p>
      <% end %>
  </table>
</div>