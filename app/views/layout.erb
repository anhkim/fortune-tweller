  <a href="/" id="logo">
    <h1> Fortune Tweller </h1>
  </a>
  <% if logged_in? %>
   <nav>
    <ul>
      <li><a href="/profile/<%= current_user.handle %>">Profile</a></li>
      <li><a href="/list_all_users">Find Users</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>
  <% end %>

</header>
<body>
  <div id="wrapper">
    <%= yield %>
  </div>
</body>
</html>

